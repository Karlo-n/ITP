{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "public/404.html", "use": "@vercel/static" },
    { "src": "**/*.mp3", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "status": 404, "dest": "/public/404.html" }
  ]
}
